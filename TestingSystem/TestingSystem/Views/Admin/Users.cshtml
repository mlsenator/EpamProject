@using Microsoft.AspNet.Identity
@model IEnumerable<BLL.Interface.Entities.BLLUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Index", "User", new { username = item.Name}, null)
        </td>
        <td>
            @if (item.Role.Name != "Admin")
            {
                @Html.DisplayFor(modelItem => item.Password)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @if (item.Role.Name != "Admin")
            { 
                @Html.ActionLink("Edit", "EditUser", new { id=item.Id })
                <label> | </label>
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
